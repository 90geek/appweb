<html>
<head>
    <title>ESP Directives</title>
</head>
<body>
<%^start 
    char    *msg = "Hello World";
    int     number = 42; 
-%>
    <h1>ESP Directives</h1>
    Today's Message: @@msg
    Lucky Number: @@%d:number
    Hostname: <%= mprGetDomainName() %>.<%= %s mprGetHostName() %>
    Time: <%= mprGetDate(0) %>
    Formatted Number: <%= %,d 12345678 %>
    Safe Strings: <%= %S "<html>" %>
</body>
</html>

<%^end espSetStatus(conn, 200); %>
