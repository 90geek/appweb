#!/bin/sh
#
#   vxrun address image
#

ADDRESS=${1:-192.168.200.1}
IMAGE=${2:-../../out/i586-wrs-vxworks/bin/appweb.out}

cat >vxargs <<!EOF
ld < $IMAGE
taskSpawn "appweb",100,0,200000,appweb
!EOF

# -ethernet addr
# -backplane addr
# -hostinet addr
# -gateway addr
# -netif addr
# -memsize Num
# -add_dev serial0=telnet:38762

/WindRiver/vxworks-6.8/host/x86-linux2/bin/vxsim \
    -f /WindRiver/vxworks-6.8/target/proj/linux_diab/default/vxWorks \
    -d simnet \
    -tn vxsim0 \
    -e $ADDRESS \
    -size 134217728 \
    -s vxargs

rm -f vxargs

# &
# sleep 2
# telnet 127.0.0.1 38762
