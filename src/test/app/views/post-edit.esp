<h1><%= testRec() ? "Edit" : "Create" %> Post</h1>

    <% form(0, 0); %>
        <table border="0">
        <% {
                MprList *cols;
                char    *name, *uname;
                int     next;

                cols = ediGetColumns(getEdi(), "post");
                for (ITERATE_ITEMS(cols, name, next)) {
                    if (smatch(name, "id")) continue;
                    uname = spascal(name);
            %>
            <tr><td><% render(uname); %></td><td><% input(name, 0); %></td></tr>
            <% } %>
        <% } %>
        </table>
        <% button("commit", "OK", 0); %>
        <% buttonLink("Cancel", "@", 0); %>
        <% if (testRec()) buttonLink("Delete", "@destroy", "{data-method: 'DELETE'}"); %>
    <% endform(); %>
