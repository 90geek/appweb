<h1><%= getRec() ? "Edit" : "Create" %> Post</h1>

<% form(0, 0); %>
    <table border="0">
    <% {
            MprList *cols;
            char    *name;
            int     next;

            cols = ediGetColumns(getRec()->edi, "post");
            for (ITERATE_ITEMS(cols, name, next)) {
                if (smatch(name, "id")) continue;
                name = spascal(name);
        %>
        <tr><td>@@uname</td><td><% input(name, 0); %></td></tr>
        <% } %>
    <% } %>
    </table>
    <% button("commit", "OK", 0); %>
    <% buttonLink("Cancel", "@", 0); %>
    <% if (getRec()) buttonLink("Delete", "@destroy", "{method: 'DELETE'}"); %>
<% endform(); %>
