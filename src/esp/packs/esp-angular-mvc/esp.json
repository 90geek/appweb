{
    name: "esp-angular-mvc",
    description: "Angular ESP MVC application skeleton",
    depends: [
        'esp-angular', 
        'less',
        'more'
    ],
    settings: {
        formats: {
            date: 'yyyy-MM-dd',
            float: 2,                                                                                                  
            int: 0
        },
        json: true,
    },
    server: {
        database: "${DATABASE}://${NAME}.${DATABASE}",
    },
    generate: {
        top: "angular-mvc",
        scaffold: true,
        clientModel: true,
        clientController: true,
        clientView: true,
        controller: true,
        migration: true,
        view: false,
    },
}
