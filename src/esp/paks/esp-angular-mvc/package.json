{
    "name": "esp-angular-mvc",
    "description": "ESP Angular MVC Application Skeleton",
    "version": "4.5.0",
    "precious": true,
    "dependencies": {
        "esp-angular": "~4"
    },
    "export": [
        "templates/**"
    ],
    "ignore": [
        "start.bit",
    ],
    "client-scripts": [
        "app/main.js",
        "app/*/**.js*"
    ],
    "esp": {
        "formats": {
            "date": "yyyy-MM-dd",
            "float": 2
        },
        "json": true,
        "server": {
            "generate": {
                "top": "esp-angular-mvc",
                "scaffold": true,
                "clientModel": true,
                "clientController": true,
                "clientFiles": true,
                "clientView": true,
                "controller": true,
                "migration": true,
                "view": false
            }
        }
    }
}
