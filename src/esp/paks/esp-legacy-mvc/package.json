{
    "name": "esp-legacy-mvc",
    "description": "ESP Server Side Legacy MVC",
    "version": "4.5.0",
    "precious": true,
    "export": [
        "layouts/**",
        "static/**",
        "templates/**"
    ],
    "esp": {
        "server": {
            "database": "${DATABASE}://${NAME}.${DATABASE}",
            "generate": {
                "top": "esp-legacy-mvc",
                "scaffold": true,
                "clientModel": false,
                "clientController": false,
                "clientView": false,
                "controller": true,
                "migration": true,
                "view": true
            }
        }
    }
}
