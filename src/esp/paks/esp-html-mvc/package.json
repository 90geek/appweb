{
    "name": "esp-html-mvc",
    "description": "ESP Server-Side HTML MVC",
    "dependencies": {
        "esp-server": "*",
        "less": "*",
        "more": "*"
    },
    "dirs": {
        "base": ".",
        "paks": "client/paks"
    },
    "precious": true,
    "esp": {
        "auth": "app",
        "serverPrefix": "/do",
        "server": {
            "database": "${DATABASE}://${NAME}.${DATABASE}"
        }
    },
    "generate": {
        "top": "html-mvc",
        "scaffold": true,
        "clientModel": false,
        "clientController": false,
        "clientView": false,
        "controller": true,
        "migration": true,
        "view": false
    }
}
