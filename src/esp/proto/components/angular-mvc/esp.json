{
    name: "angular-mvc",
    description: "Angular ESP MVC application skeleton",
    depends: [
        'angular', 
        'angular-esp', 
        'bootstrap', 
        'angular-ui-bootstrap', 
        'html5shiv', 
        'font-awesome', 
        'less', 
        'more',
        'respond'
    ],
    settings: {
        formats: {
            date: 'yyyy-MM-dd',
            float: 2,                                                                                                  
            int: 0
        },
        json: true,
        loginRequired: "",
        redirect: "secure",
        serverPrefix: "/do",
        timeouts: {
            session: 300,
        },
        xsrf: true,
    },
    server: {
        database: "${DATABASE}://${NAME}.${DATABASE}",
    },
    generate: {
        top: "angular-mvc",
        scaffold: true,
        clientModel: true,
        clientController: true,
        clientView: true,
        controller: true,
        migration: true,
        view: false,
    },
}
