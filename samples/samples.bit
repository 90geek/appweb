/*
    samples.bit -- Bit File to build all the samples
 */

Bit.load({
    targets: {
        samples: {
            build: function () {
                for each (sample in Path('.').files('**/start.bit')) {
                    trace('Sample', sample.dirname)
                    run('bit', {dir: sample.dirname, noio: true})
                }
            }
            enable: 'App.getenv("BUILD_KEY")',
        },
    },
})
