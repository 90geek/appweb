/*
    start.bit - Bit file for the typical-server sample
 */

Bit.load({
    settings: {
        requires: ['appweb'],
    },
    targets: {
        server: {
            type:    'exe',
            sources: '*.c',
            depends: ['appweb'],
        },
        run: {
            run: 'sudo ./server',
            depends: 'server',
        },
        cleanup: {
            type: 'clean',
            action: "rm('error.log*')",
        }
    },
})
