#! /bin/sh

### BEGIN INIT INFO
# Provides:          appweb
# Required-Start:    $local_fs $remote_fs $network $syslog
# Required-Stop:
# Default-Start:     2 3 4 5
# Default-Stop:
# Short-Description: Embedthis Appweb Embeddable Web Server
# Description:       Embedthis Appweb Embeddable Web Server
### END INIT INFO

#
#   Startup script for Embedthis Appweb
#   Copyright (c) All Rights Reserved. See copyright notice at the bottom of the file.
#
#   chkconfig: - 81 15
#   description: Embedthis Appweb Embeddable Web Server
#   processname: appman
#   pidfile: /var/run/appman.pid
#
###############################################################################

APPWEB_NAME="!!BLD_NAME!!"
APPWEB=!!BLD_PRODUCT!!
APPWEB_DIR=!!ORIG_BLD_CFG_PREFIX!!
APPWEB_BIN=!!ORIG_BLD_BIN_PREFIX!!

INITLOG_ARGS=""
RETVAL=0

APPMAN_CMD=$APPWEB_BIN/appman
APPMAN_SWITCHES="--daemon --home $APPWEB_DIR run"
APPMAN_TIMEOUT=10
PIDFILE=${PIDFILE-/var/run/appman.pid}
LOCKFILE=${LOCKFILE-/var/lock/appman}

#
#   Source utility functions
#
# SYSTEMCTL_SKIP_REDIRECT=1
if [ -f /etc/init.d/functions ] ; then
    #   Red-Hat
    . /etc/init.d/functions
    . /etc/sysconfig/network
elif [ -f /lib/lsb/init-functions ] ; then
    #   Debian
    . /lib/lsb/init-functions
    [ -f /etc/default/rcS ] && . /etc/default/rcS
fi

start() {
    local RETVAL=0
    echo -n "Starting ${APPWEB_NAME}: "
    if type daemon >/dev/null 2>&1 ; then
        eval daemon --pidfile=${PIDFILE} ${APPMAN_CMD} ${APPMAN_SWITCHES} 
        RETVAL=$?
        [ ${RETVAL} = 0 ] && touch $LOCKFILE
    elif type start-stop-daemon >/dev/null 2>&1 ; then
        eval start-stop-daemon --pidfile ${PIDFILE} --oknodo --start --quiet --exec "${APPMAN_CMD}" -- ${APPMAN_SWITCHES}
        RETVAL=$?
        [ ${RETVAL} = 0 ] && touch $LOCKFILE
    fi
    if [ ${RETVAL} = 0 ] ; then
        echo "OK"
    else
        echo "FAILED"
    fi
    return ${RETVAL}
}

stop() {
    if type start-stop-daemon >/dev/null 2>&1 ; then
        echo -n "Stopping ${APPWEB_NAME}: "
        if [ -f /etc/SuSE-release ] ; then
            start-stop-daemon --stop --pidfile ${PIDFILE} --quiet --oknodo --exec "${APPMAN_CMD}"
        else 
            start-stop-daemon --stop --retry=2 --pidfile ${PIDFILE} --quiet --oknodo --exec "${APPMAN_CMD}"
        fi
        RETVAL=$?
        [ ${RETVAL} = 0 ] && rm -f $LOCKFILE
    elif type killproc >/dev/null 2>&1 ; then
        # Note: killproc exists on debian also.
        echo -n $"Stopping ${APPWEB_NAME}: "
        killproc -p ${PIDFILE} -d ${APPMAN_TIMEOUT} ${APPMAN_CMD}
        RETVAL=$?
        [ ${RETVAL} = 0 ] && rm -f $LOCKFILE $PIDFILE
    fi
    if [ ${RETVAL} = 0 ] ; then
        echo "OK"
    else
        echo "FAILED"
    fi
}


#
#   Main script
#
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    status)
        status ${APPMAN_CMD}
        RETVAL=$?
        ;;
    restart|reload|force-reload)
        stop
        start
        ;;
    condrestart)
        if [ -f $LOCKFILE ]; then
            stop
            start
        fi
        ;;
    *)
        echo $"Usage: $0 {start|stop|restart|condrestart|status}"
        exit 1
esac

exit $RETVAL

